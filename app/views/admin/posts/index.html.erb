<% if flash[:notice] %>
  <div class="container">
    <div class="row mb-3">
      <div class="col p-0 alert alert-success p-0 border-0">
        <h5 class="text-center">
          <%= flash[:notice] %>
        </h5>
      </div>
    </div>
  </div>
  <% end %>
    <div class="container my-5">
      <div class="contents-title text-center">
        <h3>MUSIC</h3>
        <div class="container my-5">
          <div class="row">
            <% @posts.each do |post| %>
              <div class="col-md-3 mb-3">
                <div class="card">
                  <%= link_to admin_post_path(post) do %>
                    <%= image_tag post.get_image, class: 'card-img-top post-index-card-img' %>
                      <% end %>
                        <div class="card-body">
                          <h5 class="card-title">
                            <%= post.title.truncate(10) %>
                          </h5>
                          <div class="card-text">
                            <%= post.artist %>
                              <div><i class="fas fa-user"></i>
                                <%= link_to post.user.name,admin_user_path(post.user) %>
                              </div>
                          </div>
                        </div>
                </div>
              </div>
              <% end %>
                <%= paginate @posts %>
          </div>
        </div>