<div class='container col-12 px-5 px-sm-0'>
  <div class="mt-4">
  <h4 class="text-center bg-light"><span style="background-color: gainsboro">詳細</span></h4>
  </div>

  <div class="row mt-5">
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-3">
          <%= "ユーザー" %>
        </div>
        <div class="h4 col-md-5">
          <%= @post.user.name %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3">
          <%= "曲名" %>
        </div>
        <div class="h4 col-md-5" >
          <%= @post.title %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3">
          <%= "アーティスト" %>
        </div>
        <div class="h4 col-md-5" >
          <%= @post.artist %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3">
          <%= "ジャンル" %>
        </div>
        <div class="h4 col-md-5" >
          <%= @post.genre.genrename %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-3">
          <%= "ひとこと" %>
        </div>
        <div class="h4 col-md-5" >
          <%= @post.content %>
        </div>
      </div>
      
    <p>♥<%= @post.likes.count %> いいね</p>
  
  <div>
  <p>コメント件数：<%= @post.comments.count %></p>
  <% @post.comments.each do |comment| %>
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.body %>
      <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete %>
  </div>
    <% end %>
  


        <div class="row mt-3">
          <%= link_to "編集する", edit_admin_post_path(@post), class: "col-md-8" %>
          
        </div>
    </div>
  </div>
</div>
