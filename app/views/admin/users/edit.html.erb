<div class="container col-12">
  <div class="mt-4">
  <h4 class="text-center bg-light"><span style="background-color: gainsboro"><%= @user.name %>さんの会員情報編集</span></h1>
  </div>
  <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
    <div class="form-group">
      <div class="row mt-4 offset-md-1">
        <div class="col-lg-2">会員ID</div>
        <div class="col-lg-3"><%= @user.id %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row offset-md-1">
        <div class="col-lg-2"><%= f.label :profile_image,"プロフィール画像" %></div>
        <div class="col-lg-3"><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row offset-md-1">
        <div class="col-lg-2"><%= f.label :name,"氏名" %></div>
        <div class="col-lg-3"><%= f.text_field :name, autofocus: true, class: "form-control border-dark" %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row offset-md-1">
        <div class="col-lg-2"><%= f.label :email,"メールアドレス" %></div>
        <div class="col-lg-3"><%= f.text_field :email, class: "form-control border-dark" %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row offset-md-1">
        <div class="col-lg-2"><%= f.label :user_status,"会員ステータス" %></div>
        <div class="col-lg-3">
          <%= f.radio_button :user_status, :false, checked: true %>
          <%= f.label :user_status, "有効", value: false %>
          　<%= f.radio_button :user_status, :true %>
          <%= f.label :user_status, "退会", value: true %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row offset-md-1">
        <div class="col-lg-2"></div>
        <div class="col-lg-3 text-center"><%= f.submit "変更を保存", style: 'width:150px', class: "btn btn-outline-success" %></div>
      </div>
    </div>
  <% end %>
</div>