<div class="container">
  <div class="row mb-3">
    <div class="col p-0 alert alert-warning p-0 border-0">
      <% if @user.errors.any? %>
        <h5 class="text-center"><%= @user.errors.size %>件のエラーが発生しました</h5>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <h6 class="text-center"><li><%= message %></li></h6>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

<div class="container col-12">
  <h4 class="text-center"><span style="background-color: gainsboro"><%= @user.name %>さんの会員情報編集</span></h1>

  <div class="row my-5">
    <div class="col-md-6 mx-auto">
  <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
    <div class="form-group">
      <div class="row mt-4">
        <div class="col-lg-4">会員ID</div>
        <div class="col-lg-8"><%= @user.id %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-4"><%= f.label :profile_image,"プロフィール画像" %></div>
        <div class="col-lg-8"><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-4"><%= f.label :name,"氏名" %></div>
        <div class="col-lg-8"><%= f.text_field :name, autofocus: true, class: "form-control border-dark" %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-4"><%= f.label :email,"メールアドレス" %></div>
        <div class="col-lg-8"><%= f.text_field :email, class: "form-control border-dark" %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-4"><%= f.label :is_deleted,"会員ステータス" %></div>
        <div class="col-lg-8">
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効", value: false %>
          　<%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会", value: true %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row offset-md-1">
        <div class="col-lg-2"></div>
        <div class="col-lg-10 text-center"><%= f.submit "変更を保存", style: 'width:150px', class: "btn btn-outline-success" %></div>
      </div>
    </div>
  <% end %>
  </div>
</div>
</div>