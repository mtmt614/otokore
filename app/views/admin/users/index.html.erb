<div class="container col-12">
  <div class="mt-4">
  <h4 class="text-center bg-light"><span style="background-color: gainsboro">会員一覧</span></h4>
  </div>
  <div class="row my-5">
    <div class="col-md-10 mx-auto">
        <table class='table'>
          <thead>
            <tr>
              <th></th>
              <th>ユーザーネーム</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td></td>
                <td><%= link_to user.name, admin_user_path(user.id)  %></td>
                <td><%= user.email %></td>
                <td>
                  <% if user.is_deleted == false %>
                    <b class="text-success">有効</b>
                  <% else %>
                    <b class="text-black-50">退会</b>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <%= paginate @users %>
    </div>
  </div>
</div>