<div class="container col-12">
  <div class="mt-4">
        <h4 class="text-center bg-light"><span style="background-color: gainsboro">ジャンル編集</span></h4>
  </div>
  
  <div class="text-center mt-5 mb-5">
    <%= render "public/shared/error_messages", resource: @genre %>
    <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
      <div class="form-check-inline">
        <%= f.label :"ジャンル名" %>
      </div>
      <div class="form-check-inline">
        <%= f.text_field :genrename, class: 'form-control genre_name' %>
      </div>
      <div class="form-check-inline">
        <%= f.submit "変更を保存", class: 'btn btn-outline-success' %>
      </div>
    <% end %>
  </div>
</div>
