
<div class="container my-5">
<div class="container">
  <div class="row mb-3">
    <div class="col">
      <h4>ログイン</h4>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mb-3">
      <%= f.label "メールアドレス", class:"col-md-2 offset-md-1" %>
      <%= f.email_field :email, autofocus: true, class:"col-md-2 form-control" %>
    </div>
    <div class="row mb-3">
      <%= f.label "パスワード", class:"col-md-2 offset-md-1" %>
      <%= f.password_field :password, class:"col-md-2 form-control" %>
    </div>
    <div class="row mb-3">
      <%= f.submit "ログイン", class:"col-md-2 offset-md-2 btn btn-primary" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="row">
        <div class="col offset-md-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end %>
<% end %>