<div class="container my-5">
  <h3 class="text-center"><span style="background-color: gainsboro">投稿一覧</span></h3>
  <div class='row my-3'>
    <div class="col-md-10 mx-auto">
      <div class="row">
        <div class="col text-right">
          <%= link_to new_post_path,class: 'btn btn-default' do %>
           <i class="fas fa-plus-circle fa-2x"></i>
          <% end %>
        </div>
      </div>

      <div class="genres py-3 ml-3">
        <%= render 'admin/genres/genre_search', genres: @genres %>
      </div>
      <div class="d-flex">
        <% @posts.each do |post| %>
          <div class="card mr-3" style="width: 18rem;">
              <%#= link_to image_tag(post.get_image(100,100)), user_path(post.user) %>
              <div class="col-md-4 offset-1">
        <%= image_tag post.get_image, size: "110x100" %>
    </div>
              
            <div class="card-body">
              <h5 class="card-title"><%= link_to post.title, post_path(post)  %></h5>
              <div class="card-text">
                <p><%= post.artist %></p>
                <p><%= post.genre.genrename %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <%#= paginate @posts %>
    </div>
  </div>
</div>
