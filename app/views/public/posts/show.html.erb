<% if flash[:notice] %>
  <div class="container">
    <div class="row mb-3">
      <div class="col p-0 alert alert-success p-0 border-0">
        <h5 class="text-center"><%= flash[:notice] %></h5>
      </div>
    </div>
  </div>
<% end %>

 <section class="container mb-5">

<% if @post.user == current_user %>
    <div class="col-2 ml-auto">
        <%= link_to edit_post_path, class: "btn btn-outline-success" do %>
        <i class="far fa-edit"></i>
        <% end %>
    </div>
<% end %>

  <div class="row mb-2">
    <div class="col-lg-6">
     <%= image_tag @post.get_image, class: 'd-block mx-auto' %>
    </div>
    <div class="col-lg-6 pt-4">
     <h3 class="text-center"><%= @post.title %></h3>
     <h4 class="text-center"><%= @post.artist %></h4>
     <h4 class="text-center"><%= @post.genre.genrename %></h4>
     <p class="text-center"><%= @post.content %></p>
     <p class="text-center"><%= @post.created_at.strftime('%Y/%m/%d') %></p>
     <h5 class="text-center">
       <%= render 'public/likes/like', post:@post %>
       </h5>

  <% if user_signed_in? && current_user.email != 'guest@email.com'%>
  <div class="container my-5">
  <% @comments.each do |comment| %>
    <div class="text-center">
      <span class="font-weight-bold"><%= comment.user.name %></span>
      <small class="text-black-50">
        (<%= comment.created_at.strftime('%Y/%m/%d') %>)
      </small>
      <% if comment.user == current_user %>
          <small>
            <%= link_to post_comment_path(post_id: comment.post_id, id: comment.id), method: :delete, class: 'text-black-50', data: { confirm: '削除しますか？' } do %>
             <i class="fas fa-trash-alt"></i>
            <% end %>
          </small>
       <% end %>
      <%= simple_format(comment.body) %>

      <hr class="hr">
    </div>
   <% end %>


<%= paginate @comments %>

        <% if user_signed_in? %>
          <div class="row">
            <div class="col-12 col-md-8 mx-auto">
              <%= form_with(model:[@post, @comment], local: false) do |f| %>
                <%= f.text_area :body, class:"form-control", rows: 2, placeholder: "コメントをここに" %>

                <div class="row mt-3">
                  <div class="col-12 col-md-6 mx-auto">
                    <%= f.submit "投稿", class:"btn btn-primary btn-block" %>
                  </div>
                </div>

              <% end %>
            </div>
          </div>
        <% end %>

<% end %>


</div>
</div>
</div>
</section>
