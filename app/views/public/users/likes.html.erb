<div class="container my-5">
  <div class="contents-title text-center">
    <h3>Like</h3>
    <div class="container my-5">
      <div class="row">
        <% @like_posts.each do |post| %>
          <div class="col-md-3 mb-3">
            <div class="card">
              <%= link_to post_path(post) do %>
                <%= image_tag post.get_image, class: 'card-img-top post-index-card-img' %>
                  <% end %>
                    <div class="card-body">
                      <h5 class="card-title">
                        <%= post.title.truncate(10) %>
                      </h5>
                      <div class="card-text">
                        <%= post.artist.truncate(10) %>
                          <div><i class="fas fa-user"></i>
                            <%= link_to post.user.name,user_path(post.user).truncate(10) %>
                          </div>
                      </div>
                    </div>
                    <div class="card-footer text-right">
                      <%= render 'public/likes/like', post: post %>
                    </div>
            </div>
          </div>
          <% end %>
            <%= paginate @like_posts %>
      </div>
    </div>