<div class="container">
  <div class="row mb-3">
    <div class="col p-0 alert alert-warning p-0 border-0">
      <% if @user.errors.any? %>
        <h5 class="text-center"><%= @user.errors.size %>件のエラーが発生しました</h5>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <h6 class="text-center"><li><%= message %></li></h6>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  
<div class="container col-12">
  <h4 class="text-center"><span style="background-color: gainsboro"><%= @user.name %>さんの会員情報編集</span></h1>

  <div class="container my-5">
    <div class="col-md-6 mx-auto">
  <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-4"><%= f.label :profile_image,"プロフィール画像" %></div>
        <div class="col-lg-8"><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-4"><%= f.label :name,"ユーザーネーム" %></div>
        <div class="col-lg-8"><%= f.text_field :name, autofocus: true, class: "form-control border-dark" %></div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-4"><%= f.label :email,"メールアドレス" %></div>
        <div class="col-lg-8"><%= f.text_field :email, class: "form-control border-dark" %></div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4 mt-4 offset-lg-3 text-center"><%= f.submit "編集内容を保存", style: 'width:150px', class: "btn btn-outline-success" %></div>
      <div class="col-lg-5 mt-4 text-center"><%= link_to "退会する", users_unsubscribe_path, style: 'width:150px', class: "btn btn-outline-danger" %></div>
    </div>
  </div>
  </div>
  <% end %>
</div>